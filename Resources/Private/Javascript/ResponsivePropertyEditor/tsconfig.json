{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./lib",
        "module": "CommonJS",
        "esModuleInterop": true,
        "jsx": "react",
        "noEmitOnError": true,
        "strict": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "target": "ES5",
        "lib": [
            "dom",
            "es2016",
            "es2017.object"
        ]
    },
    "include": ["./src/**/*.*"]
}
